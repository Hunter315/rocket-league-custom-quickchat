{
  "name": "rocket-league-quickchat",
  "version": "1.0.0",
  "description": "A quickchat manager for Rocket League",
  "main": "main.js",
  "scripts": {
    "clean": "rimraf dist",
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "electron": "electron .",
    "build-addon": "cd ./my-addon && node-gyp configure && node-gyp build",
    "dist": "npm run clean && npm run build-addon && npm run build && electron-builder",
    "publish": "electron-builder --win -p always",
    "postinstall": "electron-builder install-app-deps"

  },
  "author": "Hunter Smith",
  "license": "MIT",
  "dependencies": {
    "electron-log": "^5.1.5",
    "electron-updater": "^6.2.1",
    "node-addon-api": "^8.0.0",
    "node-gamepad": "^0.1.15",
    "node-hid": "^3.1.0",
    "node-key-sender": "^1.0.11",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-modal": "^3.16.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "babel-loader": "^8.1.0",
    "css-loader": "^5.0.1",
    "electron": "^23.0.0",
    "electron-builder": "^22.10.5",
    "electron-rebuild": "^3.2.9",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "style-loader": "^2.0.0",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hunter315/rocket-league-custom-quickchat"
  },
  "build": {
    "appId": "com.hunter.rocketleaguequickchat",
    "productName": "rocket-league-custom-quickchat",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "installer.nsh"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "my-addon/build/Release/**/*",
      "modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icons/app-icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/icons/app-icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/icons/app-icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "Hunter315",
      "repo": "rocket-league-custom-quickchat"
    }
  }
}
