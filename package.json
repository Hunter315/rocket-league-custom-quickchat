{
  "name": "rocket-league-quickchat",
  "version": "1.0.0",
  "description": "A quickchat manager for Rocket League",
  "main": "main.js",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "electron": "electron .",
    "dist": "npm run build && electron-builder"
  },
  "author": "Hunter Smith",
  "license": "MIT",
  "dependencies": {
    "node-addon-api": "^8.0.0",
    "node-gamepad": "^0.1.15",
    "node-hid": "^3.1.0",
    "node-key-sender": "^1.0.11",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-modal": "^3.16.1",
    "electron-store": "^10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "babel-loader": "^8.1.0",
    "css-loader": "^5.0.1",
    "electron": "^23.0.0",
    "electron-builder": "^22.10.5",
    "electron-rebuild": "^3.2.9",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "style-loader": "^2.0.0",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "build": {
    "appId": "com.hunter.rocketleaguequickchat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "my-addon/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
